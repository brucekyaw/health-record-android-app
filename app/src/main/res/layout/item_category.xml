<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_patient"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_large"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="24dp"
    app:cardElevation="4dp">

    <!-- res/layout/item_health_category.xml -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:drawablePadding="@dimen/margin_medium"
            android:id="@+id/tv_patient_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_marginStart="@dimen/margin_medium_2"
            android:text="@string/patient_name_value"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:drawableStartCompat="@drawable/ic_patient" />

        <TextView
            android:drawablePadding="@dimen/margin_medium"
            android:id="@+id/tv_roomnumber"
            android:layout_width="wrap_content"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:text="@string/room_number"
            android:textSize="14sp"
            android:layout_marginStart="@dimen/margin_medium_2"
            android:textColor="@color/material_dynamic_secondary50"
            app:drawableLeftCompat="@drawable/ic_room" />

<!--        <ImageView-->
<!--            android:id="@+id/LightIndicator"-->
<!--            android:layout_width="16dp"-->
<!--            android:layout_height="16dp"-->
<!--            android:layout_marginEnd="@dimen/margin_medium_2"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            android:background="@drawable/holo_green_light"-->
<!--            android:visibility="visible" />-->

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_right_24"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>